
 
def notice_print(string):
    global print_flag
    formatd = '+{0:-^18}+{0:-^23}+{0:-^23}+{0:-^25}+{0:-^20}+'.format('-')
    print('|{:^113}|'.format(' '))
    print('|{:^113}|'.format(string))
    print('|{:^113}|'.format(' '))
    print(formatd)



def train_print(batch = 0, l_train = 0, l_valid = 0, a_train = 0,a_valid = 0, time = 0):
    formats = '| batch {0:>10d} | l_train {1:>13.8f} | l_valid {2:>13.8f} | acc_train {3:>13.5f} | acc_valid {4:>13.5f} | time {5:>13.3f} |'
    return formats.format(batch, l_train, l_valid, a_train, a_valid, time)





